<Map srs="+init=epsg:3857" maximum-extent="-20037508.34,-20037508.34,20037508.34,20037508.34">

  <Parameters>
    <Parameter name="center">0,0</Parameter>
    <Parameter name="bounds">-180,-180,180,180</Parameter>
    <Parameter name="format">webp</Parameter>
    <Parameter name="minzoom">1</Parameter>
    <Parameter name="maxzoom">6</Parameter>
  </Parameters>

  <Style name="raster">
    <Rule>
      <RasterSymbolizer opacity="1" scaling="bilinear" filter-factor="2"/>
    </Rule>
  </Style>

  <Layer name="raster" buffer-size="0" srs="+init=epsg:4326">
    <StyleName>raster</StyleName>
    <Datasource>
      <Parameter name="type">gdal</Parameter>
      <Parameter name="file">{{file}}</Parameter>
    </Datasource>
  </Layer>

</Map>